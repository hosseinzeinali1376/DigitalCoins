<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#F44336"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:layout_height="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تراکنش فروش"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="30dp"
            android:background="#F44336"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_mablagh_sell"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="مبلغ"
        android:inputType="number"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:padding="1dp"
        app:boxBackgroundColor="#fff"
        app:counterMaxLength="10">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_mablagh_sell"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_meghdar_sell"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="مقدار"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="173dp"
        android:inputType="number"
        android:padding="1dp"
        app:boxBackgroundColor="#fff"
        app:counterMaxLength="10">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_meghdar_sell"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_date_sell"
        style="@style/Theme.DigitalCoins.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="244dp"
        android:text="تاریخ" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="310dp"
        app:startIconDrawable="@drawable/ic_money">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView_sell"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:inputType="none"
            android:text="ارزها" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_sell_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="120dp"
        android:padding="1dp"
        android:text="مبلغ :"
        android:textColor="#E4E4E4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_sell_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="180dp"
        android:padding="1dp"
        android:text="مقدار :"
        android:textColor="#E4E4E4"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_sell_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="244dp"
        android:padding="1dp"
        android:text="تاریخ :"
        android:textColor="#E4E4E4"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_sell_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="306dp"
        android:padding="1dp"
        android:text="نوع ارز :"
        android:textColor="#E4E4E4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_sell"
        style="@style/Theme.DigitalCoins.Button.UnelevatedButton_Sell"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="تایید"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:background="#92000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/img_background_sell"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/Theme.DigitalCoins.Button.UnelevatedButton"
        android:id="@+id/btn_save_calender_sell"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_marginRight="40dp"
        android:text="ذخیره"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/Theme.DigitalCoins.Button.UnelevatedButton"
        android:id="@+id/btn_cancel_calender_sell"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_marginLeft="40dp"
        android:text="خروخ"/>


    <DatePicker
        android:id="@+id/datePicker_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#fff"
        android:datePickerMode="calendar"
        android:visibility="gone" />


</RelativeLayout>